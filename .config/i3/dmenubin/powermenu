#!/bin/bash

#======================================================================#
#	 __     ___  __      __   __   __   ___  __
#	|__) | |__  |__)    /  ` /  \ |  \ |__  |__)
#	|    | |___ |  \    \__, \__/ |__/ |___ |  \
#
#	dmenu power-off menu
#======================================================================#

# Colors
background="#353535"
foreground="#EEEEEC"
critical="#15539E"

# Style
lines="3"
font="FontAwesome-12"

# Theme
theme="-l $lines -nf $foreground -nb $background -sb $critical -sf $foreground -fn $font"

# Menu entries
o1="    Logout"
o2="    Reboot"
o3="    Poweroff" 

# Power-off menu
OPT=$(echo -e "$o1\n$o2\n$o3" | dmenu -i -p "Power menu ▶" $theme )

case $OPT in
	$o1) i3-msg exit ;;
	$o2) systemctl reboot ;;
	$o3) systemctl poweroff ;;
	*) ;;
esac
