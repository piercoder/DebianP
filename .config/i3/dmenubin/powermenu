#!/bin/bash

#======================================================================#
#	 __     ___  __      __   __   __   ___  __
#	|__) | |__  |__)    /  ` /  \ |  \ |__  |__)
#	|    | |___ |  \    \__, \__/ |__/ |___ |  \
#
#	dmenu power-off menu
#======================================================================#

# Colors
background="#282a36"
foreground="#6272a4"
critical="#bd93f9"

# Style
lines="3"
font="FontAwesome-12"

# Theme
theme="-l $lines -nf $foreground -nb $background -sb $foreground -sf $background -fn $font"

# Power-off menu

OPT=$(echo -e "Logout\nPoweroff\nReboot" | dmenu -i -p "Power menu â–¶" $theme )

case $OPT in
	Logout) i3-msg exit ;;
	Poweroff) systemctl poweroff ;;
	Reboot) systemctl reboot ;;
	*) ;;
esac
