#!/bin/bash

#======================================================================#
#	 __     ___  __      __   __   __   ___  __  
#	|__) | |__  |__)    /  ` /  \ |  \ |__  |__) 
#	|    | |___ |  \    \__, \__/ |__/ |___ |  \ 
#	
#	dmenu power-off menu                                             
#======================================================================#

# Colors  
background="#282a36"
currentline="#44475a"
selection="#44475a"
foreground="#f8f8f2"
comment="#6272a4"
cyan="#8be9fd"
green="#50fa7b"
orange="#ffb86c"
pink="#ff79c6"
purple="#bd93f9"
red="#ff5555"
yellow="#f1fa8c"
forealt="#bfbfbf"
backtransp="#282a36CC"

# Style
lines="2"
font="FontAwesome-12"

# Theme  
theme="-l $lines -nf $foreground -nb $background -sb $comment -sf $foreground -fn $font"

# Power-off menu

OPT=$(echo -e "Poweroff\nReboot" | dmenu -i -p "Power menu â–¶" $theme )

case $OPT in
	Poweroff) systemctl poweroff ;;
	Reboot) systemctl reboot     ;;
	*) ;;
esac
